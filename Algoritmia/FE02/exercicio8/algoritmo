var:

    num:inteiro

Algoritmo:

    ler(num)
    
    se num==0
        escrever(erro)
    senao
        se num>0 entao
            escrever(Positivo)
        sena
            escrever(Negativo)
        fimSe
    fimSe

fimAlgoritmo